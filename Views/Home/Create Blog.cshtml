@model PropertyManagerWeb.Models.BlogViewModel

@{
    ViewBag.Title = "Create Topic";
}

<script>
    //Client-side image upload preview
    var loadFile = function (event) {
        var output = document.getElementById('output1');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

<script>
    window.onload = function () {
        document.getElementById('breadcrumb').style.display = 'none';
    };
</script>
<!-- Breadcrumb Wrapper start -->
<div class="rle_pagetitle_wrapper style_2 rle_toppadder30 rle_bottompadder30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="page_title">
                    <h2>@ViewBag.Title</h2>
                </div>
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home" aria-hidden="true"></i> home</a></li>
                    <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                    <li><a href="@Url.Action("Index","Home")">Blog</a></li>
                    <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                    <li><a href="#">@ViewBag.Title</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="rle_contact_wrapper rle_toppadder90 rle_bottompadder90">
    <div class="container">
        @using (Html.BeginForm("CreateBlogTopic", "Home", FormMethod.Post, new { @role = "form", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="rle_contact_info">
                        <label class="custom-file-upload">
                            <small id="instruct2">Click to Upload an Image for the Blog <span class="glyphicon glyphicon-camera"></span></small>
                            <img class="img-responsive center-block" id="output1" width="700" height="300" />
                            @Html.TextBoxFor(m => m.BlogImage, new { @type = "file", accept = "image/*", onchange = "loadFile(event)" })
                        </label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="rle_contact_form">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @Html.TextBoxFor(m => m.Title, new { @placeholder = "Title", @class = "form-control", @style = "margin-bottom:20px; height:50px; border-radius:0px" })
                            </div>

                            <div class="col-lg-12">
                                @Html.TextAreaFor(m => m.Body, new { @rows = 7, @placeholder = "Blog body" })
                            </div>
                            <div class="col-lg-12">
                                <button style="margin-top:20px; float:right" type="submit" class="rle_btn">Post</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    input[type="file"] {
        display: none;
    }

    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 0px 12px;
        cursor: pointer;
        width: 100%;
        height: 350px;
    }
</style>

@section Scripts {
    @Scripts.Render("http://tinymce.cachefly.net/4.0/tinymce.min.js")
    <script>
        tinymce.init({ selector: 'textarea' });

    </script>
}
