@model PropertyManagerWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="text-align:center; margin-top:20px">CREATE A NEW ACCOUNT.</h4>
            <h3>@ViewBag.MailMsg</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group"  style="display:none">
                @Html.LabelFor(m => m.UserType, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @*@Html.TextBoxFor(m => m.UserType, new { @class = "form-control" })*@
                    <label>
                        <input type="radio" name="UserType" id="UserType" value="Landlord" checked>
                        For Rent
                    </label>
                    <label>
                        <input type="radio" name="UserType" id="UserType" value="Tenant">
                        For Sale
                    </label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-7 col-md-8">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        }
    </div>
</div>
